---
interface Props {
  styles: string;
  shadow?: string;
  href: string;
  target?: string;
  animation: string
}

const { styles, shadow, href, target, animation } = Astro.props;
---

<style>
  @tailwind components;

  @layer components {
    .btn-primary {
      @apply relative bg-emerald-600 py-2 px-4 md:text-lg lg:text-2xl text-white transition-all;
    }
  }

  .link-1 {
    opacity: 0;
    animation: fadeInUp 1s 2s forwards
  }

  .link-2 {
    opacity: 0;
    animation: fadeInUp 1s 2.3s forwards
  }
</style>

<a href={href} class={`group relative ${animation}`} target={target}>
  <span
    class=`absolute w-full h-full bg bg-neutral-800 -right-2 -bottom-2 -z-10 group-hover:translate-y-1 group-hover:translate-x-1 transition-all ${shadow}`
  ></span>
  <div
    class={`group-hover:-translate-y-1 group-hover:-translate-x-1 ${styles}`}
  >
    <slot />
  </div>
</a>
