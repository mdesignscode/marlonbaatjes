---
import allProjects from "@src/allProjects.js";
import RootLayout from "@layouts/RootLayout.astro";
import Projects from "@components/Projects.astro";
---

<style>
  h1 {
    opacity: 0;
    animation:
      pulse 1s,
      fadeIn 1s forwards;
  }
</style>

<RootLayout title="Projects">
  <div class="space-y-4">
    <h1
      class="font-bold text-2xl sm:text-3xl md:text-4xl pb-2 border-b-2 border-neutral-200"
    >
      My Projects
    </h1>

    <div class="space-y-8 projects">
      <Projects
        projects={allProjects.personal}
        key="personal"
        title="Personal projects"
      />

      <Projects
        projects={allProjects.clones}
        key="clones"
        title="Clone projects"
      />
    </div>
  </div>
</RootLayout>
